@model List<DAL.Entities.OrderDetail>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/LayoutClient.cshtml";
}


<div class="container">
    <div class="row">
      <ul class="breadcrumb">
        <li><a href="https://opencart.dostguru.com/FD04/upbasket_01/index.php?route=common/home"><i class="fa fa-home"></i></a></li>
        <li><a href="https://opencart.dostguru.com/FD04/upbasket_01/index.php?route=checkout/cart">Shopping Cart</a></li>
        </ul>
  </div>
</div>
<div id="checkout-cart" class="container">
       <div class="row">

                <div id="content" class="col-xs-12 acpage">

      <div class="infobg">

      <h1>Shopping Cart</h1>
      <form method="post" enctype="multipart/form-data">
                    @if (Model != null)
                    {
                        foreach(var Data in Model){
                            <div class="allcart">
                                <div class="cart-img">
                                    <a href="#"><img src="@Url.Content(Data.Product.imgPath)" alt="@Data.Product.Name" title="@Data.Product.Name" class="img-thumbnail" /></a>
                                </div>
                                 <div class="cart-des">
                                        <a class="cart-des-name" href="#">@Data.Product.Name</a>
                                        <div class="price">$@Data.Price</div>
                                        <div class="input-group btn-block" style="max-width: 200px;">
                                            <input type="text" name="quantity" value="@Data.Quantity" size="1" class="form-control" />
                                            <span class="input-group-btn cartpsp">
                                                <a href="#" title="Update" class="btn btn-danger cbt; "><i class="fa fa-refresh"></i></a>
                                                <a href="#" title="Remove" class="btn btn-danger cbt; "><i class="fa fa-times-circle"></i></a>
                                            </span>
                                        </div>
                                 </div>
                            </div>
                        }
                    }
                      </form>
       <br />
      <div class="row">
        <div class="col-lg-8 col-xs-12 col-md-6"></div>
        <div class="col-lg-4 col-xs-12 col-sm-12 col-md-6">
          <table class="table table-bordered">
                        <tr>
              <td class="text-right"><strong>Total:</strong></td>
                                @if (Model != null)
                                {
                                    float value = 0;
                                    foreach(var Data in Model)
                                    {
                                        value += Data.Price * Data.Quantity;
                                    }
                                    <td class="text-right">$@value</td>
                                }
                      </table>
        </div>
      </div>
      <div class="buttons clearfix">
        <div class="pull-right"><a href="@Url.Action("Index","Home")" class="btn btn-primary">Continue Shopping</a></div>
      </div>
      </div></div>
    </div>
</div>
