                </div><!--end col-->
            </div><!--end row-->
            <!-- end page title end breadcrumb -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h4 class="card-title">Create Product Form</h4>

                                </div><!--end col-->
                            </div>  <!--end row-->
                        </div><!--end card-header-->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form asp-action="ProductDetail">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="ID" />
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label">Product Name :</label>
                                            <input asp-for="Name" class="form-control" id="Name" aria-describedby="emailHelp" placeholder="Enter Product name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div><!--end form-group-->
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label">Price :</label>
                                            <input asp-for="Price" class="form-control" id="projectName" aria-describedby="emailHelp" placeholder="Enter price">
                                            <span asp-validation-for="Price" class="text-danger"></span>

                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label asp-for="Category.ID" class="control-label">Category</label>
                                            <select asp-for="Category.ID" asp-items="@(new SelectList(ViewBag.CategorySelective, "ID", "Name"))" class="form-control"></select>
                                            <span asp-validation-for="Category.ID" class="text-danger"></span>
                                        </div><!--end form-group-->
                                        <div class="form-group">
                                            <label class="form-label" for="isAvailable">Available?</label>
                                            <ul class="list-unstyled mb-0 row">
                                                <li class="col-6">
                                                    <div class="radio radio-primary">
                                                        <input type="radio" asp-for="isAvailable" name="isAvailable" id="radio_1" value="true">
                                                        <label for="radio_1">
                                                            Available
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="col-6">
                                                    <div class="radio radio-primary">
                                                        <input type="radio" asp-for="isAvailable" name="isAvailable" id="radio_2" value="false">
                                                        <label for="radio_2">
                                                            Unavailable
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div><!--end form-group-->
                                        <div class="form-group">
                                            <label class="form-label" for="isDeleted">Delete?</label>
                                            <ul class="list-unstyled mb-0 row">
                                                <li class="col-6">
                                                    <div class="radio radio-primary">
                                                        <input type="radio" asp-for="isDeleted" name="isDeleted" id="radio_1" value="true">
                                                        <label for="radio_1">
                                                            Delete
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="col-6">
                                                    <div class="radio radio-primary">
                                                        <input type="radio" asp-for="isDeleted" name="isDeleted" id="radio_2" value="false">
                                                        <label for="radio_2">
                                                            Recover
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label asp-for="imgPath" class="control-label">Product Image:</label>
                                            <br />
                                            <img src="@Url.Content(Model.imgPath)" alt="Product Image">
                                            <div class="add-file btn btn-soft-primary btn-sm position-relative overflow-hidden">
                                                Change picture
                                                <input type="file" name="imgPath" id="imgPath" asp-for="imgPath" accept="image/*" class="form-control" value="@Model.imgPath" />
                                            </div>
                                        </div><!--end form-group-->





                                        <button type="submit" class="btn btn-soft-primary btn-sm">Update product</button>
                                      
                                    </form>  <!--end form-->
                                </div><!--end col-->
