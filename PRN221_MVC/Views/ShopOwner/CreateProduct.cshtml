                                    <style>
                                        .form-control:invalid {
                                            border-color: #dc3545;
                                        }
                                    </style>

                                    <script>
                                        (function () {
                                            'use strict'

                                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                                            var forms = document.querySelectorAll('.needs-validation')

                                            // Loop over them and prevent submission
                                            Array.prototype.slice.call(forms)
                                                .forEach(function (form) {
                                                    form.addEventListener('submit', function (event) {
                                                        if (!form.checkValidity()) {
                                                            event.preventDefault()
                                                            event.stopPropagation()
                                                        }

                                                        form.classList.add('was-validated')
                                                    }, false)
                                                })
                                        })()
                                    </script>
                                    <script>
                                        // Get the input fields and invalid feedback elements
                                        var nameInput = document.getElementById('Name');
                                        var priceInput = document.getElementById('Price');
                                        var nameInvalidFeedback = nameInput.nextElementSibling;
                                        var priceInvalidFeedback = priceInput.nextElementSibling;

                                        // Hide the invalid feedback when the user starts typing in the input field
                                        nameInput.addEventListener('input', function () {
                                            if (nameInput.checkValidity()) {
                                                nameInvalidFeedback.style.display = 'none';
                                            }
                                        });

                                        priceInput.addEventListener('input', function () {
                                            if (priceInput.checkValidity()) {
                                                priceInvalidFeedback.style.display = 'none';
                                            }
                                        });
                                    </script>
                                    <script>
                                        function submitForm(event) {
                                            event.preventDefault();
                                            var form = event.target.closest('form');
                                            var formData = new FormData(form);
                                            fetch(form.action, {
                                                method: 'POST',
                                                body: formData
                                            })
                                                .then(function (response) {
                                                    if (response.ok) {
                                                        // Show success message as a popup
                                                        Swal.fire({
                                                            icon: 'success',
                                                            title: 'Product created!',
                                                            showConfirmButton: false,
                                                            timer: 1500
                                                        }).then(function () {
                                                            // Reload the page after the popup is closed
                                                            location.reload();
                                                        });
                                                    } else {
                                                        // Show error message as a popup
                                                        response.text().then(function (@ViewBag.ErrorMessage) {
                                                            var errorMessage = @ViewBag.ErrorMessage;
                                                            if (response.status === 400) {
                                                                // If the response is a bad request, it may contain a ModelState error message
                                                                var json = JSON.parse(text);
                                                                if (json && json.errors && json.errors.Name && json.errors.Name.length > 0) {
                                                                    errorMessage = json.errors.Name[0];
                                                                }
                                                            }
                                                            Swal.fire({
                                                                icon: 'error',
                                                                title: 'Error',
                                                                text: errorMessage
                                                            });
                                                        });
                                                    }
                                                });
                                        }
