                                                {
                                                    <option value="@category.ID" >@category.Name</option>
                                                }
                                            </select>
                                        </div><!--end form-group-->
                                        <div class="form-group">
    <label class="form-label" for="isAvailable">Available?</label>
    <ul class="list-unstyled mb-0 row">
        <li class="col-6">
            <div class="radio radio-primary">
                <input type="radio" asp-for="isAvailable" name="isAvailable" id="radio_1" value="true">
                <label for="radio_1">
                    Available
                </label>
            </div>
        </li>
        <li class="col-6">
            <div class="radio radio-primary">
                                                        <input type="radio" asp-for="isAvailable" name="isAvailable" id="radio_2" value="false">
                <label for="radio_2">
                    Unavailable
                </label>
            </div>
        </li>
    </ul>
</div><!--end form-group-->
                                        
                                                <div class="form-group">
