            title: {
                text: 'Sales'
            }
        }
    };

    var chartLine = new ApexCharts(document.querySelector("#chartLine"), optionsChartLine);
    chartLine.render();


    var options = {
        chart: {
            type: 'pie'
        },
        series: [
             @foreach (var item in topSellingProducts) {
                    @: @item.TotalAmount,
                }
        ],

        labels: [
            @foreach (var item in topSellingProducts) {
            @: '@item.Product.Name',
        }
        ]
    }

    var chartPie = new ApexCharts(document.querySelector('#chartPie'), options)
    chartPie.render();

     var options = {
